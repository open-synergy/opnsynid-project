<?xml version="1.0" encoding="utf-8" ?>
<openerp>
<data>

<record id="project_project_view_form" model="ir.ui.view">
    <field name="name">project.project form</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.edit_project" />
    <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
            <page name="schedule" string="Schedule">
                <group name="schedule_2" colspan="4" col="2">
                    <field name="project_timezone" />
                </group>
                <group name="schedule_1" colspan="4" col="2">
                    <group
                                name="schedule_1_1"
                                colspan="1"
                                col="2"
                                string="Baseline Start"
                            >
                        <field name="start_schedule_base_on" />
                        <field
                                    name="manual_baseline_start"
                                    attrs="{'invisible':[('start_schedule_base_on', '!=', 'manual')]}"
                                />
                        <field
                                    name="baseline_start_project_id"
                                    attrs="{'invisible':['|', ('start_schedule_base_on', '=', 'manual'),('start_schedule_base_on', '=', False)]}"
                                />
                        <field
                                    name="baseline_start_task_id"
                                    attrs="{'invisible':['|', ('start_schedule_base_on', '=', 'manual'),('start_schedule_base_on', '=', False)]}"
                                    domain="[('project_id','=',baseline_start_project_id)]"
                                />
                        <label
                                    for="start_offset"
                                    attrs="{'invisible':['|', ('start_schedule_base_on', '=', 'manual'),('start_schedule_base_on', '=', False)]}"
                                />
                        <div
                                    attrs="{'invisible':['|', ('start_schedule_base_on', '=', 'manual'),('start_schedule_base_on', '=', False)]}"
                                >
                            <field name="start_offset" class="oe_inline" />
                            <field
                                        name="start_offset_uom_id"
                                        class="oe_line"
                                        domain="[('category_id','=',%(product.uom_categ_wtime)d)]"
                                    />
                        </div>
                        <field name="baseline_start" />
                    </group>
                    <group
                                name="schedule_1_2"
                                colspan="1"
                                col="2"
                                string="Baseline Finish"
                            >
                        <field name="finish_schedule_base_on" />
                        <field
                                    name="manual_baseline_finish"
                                    attrs="{'invisible':[('finish_schedule_base_on', '!=', 'manual')]}"
                                />
                        <field
                                    name="baseline_finish_project_id"
                                    attrs="{'invisible':['|', ('finish_schedule_base_on', '=', 'manual'),('finish_schedule_base_on', '=', False)]}"
                                />
                        <field
                                    name="baseline_finish_task_id"
                                    attrs="{'invisible':['|', ('finish_schedule_base_on', '=', 'manual'),('finish_schedule_base_on', '=', False)]}"
                                    domain="[('project_id','=',baseline_finish_project_id)]"
                                />
                        <label
                                    for="finish_offset"
                                    attrs="{'invisible':['|', ('finish_schedule_base_on', '=', 'manual'),('finish_schedule_base_on', '=', False)]}"
                                />
                        <div
                                    attrs="{'invisible':['|', ('finish_schedule_base_on', '=', 'manual'),('finish_schedule_base_on', '=', False)]}"
                                >
                            <field name="finish_offset" class="oe_inline" />
                            <field
                                        name="finish_offset_uom_id"
                                        class="oe_line"
                                        domain="[('category_id','=',%(product.uom_categ_wtime)d)]"
                                    />
                        </div>
                        <field name="baseline_finish" />
                    </group>
                </group>
            </page>
        </xpath>
    </field>
</record>

<record id="project_project_view_tree" model="ir.ui.view">
    <field name="name">project.project tree</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.view_project" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='planned_hours']" position="before">
                <field name="baseline_start" />
                <field name="baseline_finish" />
            </xpath>
        </data>
    </field>
</record>

<record id="project_project_view_gantt" model="ir.ui.view">
    <field name="name">project.project gantt</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.view_project_project_gantt" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//gantt" position="attributes">
                <attribute name="date_start">baseline_start</attribute>
                <attribute name="date_stop">baseline_finish</attribute>
            </xpath>
        </data>
    </field>
</record>

<record id="project_project_view_search" model="ir.ui.view">
    <field name="name">project.project search</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.view_project_project_filter" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//group/filter[@name='Parent']" position="after">
                <filter
                            name="grp_baseline_start_year"
                            string="Baseline Start By Year"
                            context="{'group_by':'baseline_start:year'}"
                        />
                <filter
                            name="grp_baseline_start_month"
                            string="Baseline Start By Month"
                            context="{'group_by':'baseline_start:month'}"
                        />
                <filter
                            name="grp_baseline_start_week"
                            string="Baseline Start By Week"
                            context="{'group_by':'baseline_start:week'}"
                        />
                <filter
                            name="grp_baseline_start_day"
                            string="Baseline Start By Day"
                            context="{'group_by':'baseline_start:day'}"
                        />
                <filter
                            name="grp_baseline_finish_year"
                            string="Baseline Finish By Year"
                            context="{'group_by':'baseline_finish:year'}"
                        />
                <filter
                            name="grp_baseline_finish_month"
                            string="Baseline Finish By Month"
                            context="{'group_by':'baseline_finish:month'}"
                        />
                <filter
                            name="grp_baseline_finish_week"
                            string="Baseline Finish By Week"
                            context="{'group_by':'baseline_finish:week'}"
                        />
                <filter
                            name="grp_baseline_finish_day"
                            string="Baseline Finish By Day"
                            context="{'group_by':'baseline_finish:day'}"
                        />
            </xpath>
        </data>
    </field>
</record>

</data>
</openerp>
