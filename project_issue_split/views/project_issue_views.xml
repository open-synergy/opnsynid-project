<?xml version="1.0" encoding="utf-8" ?>
<openerp>
<data>

    <record id="project_issue_view_form" model="ir.ui.view">
        <field name="name">project.issue.split.form</field>
        <field name="model">project.issue</field>
        <field name="inherit_id" ref="project_issue.project_issue_form_view" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook" position="inside">
                    <page name="split_issue" string="Split Issue">
                        <group name="split_issue_1" colspan="4" col="2">
                            <field name="split_issue_id" />
                        </group>
                        <group
                                name="split_issue_2"
                                string="Split Into"
                                colspan="4"
                                col="2"
                            >
                            <field name="split_issue_ids" colspan="2" nolabel="1" />
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

</data>
</openerp>
