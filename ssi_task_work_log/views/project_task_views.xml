<odoo>
<record id="project_task_view_form" model="ir.ui.view">
     <field name="name">project.task form</field>
     <field name="model">project.task</field>
     <field name="inherit_id" ref="project.view_task_form2" />
     <field name="mode">extension</field>
     <field name="arch" type="xml">
          <data>
               <xpath expr="//notebook" position="inside">
                    <page name="work_log_analytic" string="Work Log Analytics">
                         <field
                            name="work_log_analytic_account_ids"
                            widget="many2many_tags"
                        />
                    </page>
               </xpath>
          </data>
     </field>
</record>

<record id="project_task_view_tree" model="ir.ui.view">
     <field name="name">project.task tree</field>
     <field name="model">project.task</field>
     <field name="inherit_id" ref="project.view_task_tree2" />
     <field name="mode">extension</field>
     <field name="arch" type="xml">
          <data>
               <xpath expr="//field[@name='user_id']" position="after">
                    <field
                        name="work_estimation"
                        string="Estimation"
                        widget="float_time"
                        optional="show"
                        sum="Total Estimation"
                    />
                    <field
                        name="total_work"
                        string="Total"
                        widget="float_time"
                        optional="show"
                        sum="Total Work"
                    />
                    <field
                        name="remaining_work"
                        string="Remaining"
                        widget="float_time"
                        optional="show"
                        sum="Total Remaing"
                    />
                    <field
                        name="excess_work"
                        string="Excess"
                        widget="float_time"
                        optional="show"
                        sum="Total Excess"
                    />
               </xpath>
          </data>
     </field>
</record>

<record id="project_task_view_kanban" model="ir.ui.view">
     <field name="name">project.task kanban</field>
     <field name="model">project.task</field>
     <field name="inherit_id" ref="project.view_task_kanban" />
     <field name="mode">extension</field>
     <field name="arch" type="xml">
          <data>
               <xpath expr="/kanban/progressbar" position="attributes">
                    <attribute name="sum_field">remaining_work</attribute>
               </xpath>

               <xpath expr="//field[@name='tag_ids']" position="after">
                    Estimation: <field
                        name="work_estimation"
                        string="Estimation"
                        widget="float_time"
                    /><br />
                    Total: <field
                        name="total_work"
                        string="Total"
                        widget="float_time"
                    /><br />
                    Remaining: <field
                        name="remaining_work"
                        string="Remaining"
                        widget="float_time"
                    /><br />
                    Excess: <field
                        name="excess_work"
                        string="Excess"
                        widget="float_time"
                    />
               </xpath>
          </data>
     </field>
</record>
</odoo>
