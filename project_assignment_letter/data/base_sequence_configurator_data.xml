<openerp>
<data>
    <record
            id="base_sequence_project_assignment_letter"
            model="base.sequence_configurator"
        >
        <field
                name="model_id"
                ref="project_assignment_letter.model_project_assignment_letter"
            />
        <field
                name="sequence_field_id"
                search="[('model_id.model','=','project.assignment_letter'),('name','=','name')]"
            />
        <field
                name="fallback_sequence_id"
                ref="project_assignment_letter.base_sequence_project_assignment_letter"
            />
    </record>

    <record
            id="base_sequence_project_assignment_letter_line"
            model="base.sequence_configurator_line"
        >
        <field name="generator_id" ref="base_sequence_project_assignment_letter" />
        <field name="sequence" eval="1" />
        <field
                name="sequence_computation_code"
            >result = document.project_id.assignment_letter_sequence_id</field>
    </record>

</data>
</openerp>
