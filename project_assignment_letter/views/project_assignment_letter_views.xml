<openerp>
<data>

    <record id="project_assignment_letter_view_search" model="ir.ui.view">
        <field name="name">project.assignment_letter form</field>
        <field name="model">project.assignment_letter</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="project_id" />
                <field name="signee_id" />
                <field name="date" />
                <field name="company_id" groups="base.group_multi_company" />
                <group name="dom_state" string="State">
                    <filter
                            name="dom_draft"
                            string="Draft"
                            domain="[('state','=','draft')]"
                        />
                    <filter
                            name="dom_confirm"
                            string="Waiting for Approval"
                            domain="[('state','=','confirm')]"
                        />
                    <filter
                            name="dom_valid"
                            string="Valid"
                            domain="[('state','=','valid')]"
                        />
                    <filter
                            name="dom_cancel"
                            string="Cancel"
                            domain="[('state','=','cancel')]"
                        />
                    <filter
                            name="needs_review"
                            string="Needs my Review"
                            domain="
                                    [
                                    ('reviewer_ids','in',uid),
                                    ('state', 'not in', ['won', 'cancel', 'lost'])
                                    ]"
                        />
                </group>
                <separator />
                <group name="group" string="Group By">
                    <filter
                            name="grp_company"
                            string="Company"
                            context="{'group_by':'company_id'}"
                            groups="base.group_multi_company"
                        />
                    <filter
                            name="grp_project"
                            string="Project"
                            context="{'group_by':'project_id'}"
                        />
                    <filter
                            name="grp_state"
                            string="State"
                            context="{'group_by':'state'}"
                        />
                    <filter
                            name="grp_date_year"
                            string="Date by Year"
                            context="{'group_by':'date:year'}"
                        />
                    <filter
                            name="grp_date_month"
                            string="Date by Month"
                            context="{'group_by':'date:month'}"
                        />
                    <filter
                            name="grp_date_week"
                            string="Date by Week"
                            context="{'group_by':'date:week'}"
                        />
                    <filter
                            name="grp_date_day"
                            string="Date by Day"
                            context="{'group_by':'date:day'}"
                        />
                </group>
            </search>
        </field>
    </record>

    <record id="project_assignment_letter_view_tree" model="ir.ui.view">
        <field name="name">project.assignment_letter tree</field>
        <field name="model">project.assignment_letter</field>
        <field name="arch" type="xml">
            <tree
                    colors="red:(state in ('confirm','valid'));blue:state == 'draft';grey:state == 'cancel';"
                >
                <field name="message_unread" invisible="1" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="display_name" string="# Document" />
                <field name="project_id" />
                <field name="signee_id" />
                <field name="date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="project_assignment_letter_view_form" model="ir.ui.view">
        <field name="name">project.assignment_letter form</field>
        <field name="model">project.assignment_letter</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                            name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"
                            confirm="Confirm. Are you sure?"
                            attrs="{'invisible':['|',('state','!=','draft'),('confirm_ok','=',False)]}"
                        />
                    <button
                            name="request_validation"
                            string="Request Validation"
                            attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','not in',['confirm'])]}"
                            class="oe_highlight"
                            type="object"
                        />
                    <button
                            name="restart_validation"
                            string="Restart Validation"
                            attrs="{'invisible': ['|','|','|',('review_ids', '=', []),('rejected','=',False),('state','not in',['confirm']),('restart_validation_ok','=',False)]}"
                            type="object"
                        />
                    <button
                            name="%(base_print_policy.base_print_document_action)d"
                            string="Print"
                            type="action"
                            icon="gtk-print"
                        />
                    <button
                            name="%(base_cancel_reason.base_cancel_reason_wizard_action)d"
                            type="action"
                            string="Cancel"
                            attrs="{'invisible':['|',('state','=','cancel'),('cancel_ok','=',False)]}"
                            confirm="Cancel. Are you sure?"
                        />
                    <button
                            name="action_restart"
                            type="object"
                            string="Restart"
                            confirm="Restart. Are you sure?"
                            attrs="{'invisible':['|',('state','!=','cancel'),('restart_ok','=',False)]}"
                        />
                    <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="draft,confirm,done"
                        />
                </header>
                <field name="need_validation" invisible="1" />
                <field name="validated" invisible="1" />
                <field name="rejected" invisible="1" />
                <div
                        class="alert alert-warning"
                        attrs="{'invisible': ['|', '|', '|',
                     ('validated', '=', True), ('state', 'not in', ['confirm']),
                     ('rejected', '=', True), ('review_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                    <p><i class="fa fa-info-circle" />This Assignment Letter needs to be
                        validated.
                        <button
                                name="validate_tier"
                                string="Validate"
                                attrs="{'invisible': [('review_ids', '=', [])]}"
                                type="object"
                                class="oe_inline oe_button btn-success"
                                icon="terp-check"
                            />
                        <button
                                name="reject_tier"
                                string="Reject"
                                type="object"
                                class="btn-icon btn-danger"
                                icon="terp-gtk-stop"
                            />
                    </p>
                </div>
                <sheet>
                    <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        >
                    </div>
                    <div class="oe_left" style="width: 500px;">
                        <div class="oe_title" style="width: 500px;">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                              <field name="name" class="oe_edit_only" />
                              <field name="display_name" class="oe_read_only" />
                            </h1>
                            <label for="title" class="oe_edit_only" />
                            <h2 attrs="{'invisible': [('state', '!=', 'cancel')]}">
                                <label
                                        for="cancel_reason_id"
                                        string="Cancellation reason:"
                                    />
                                <field name="cancel_reason_id" class="oe_inline" />
                            </h2>
                        </div>
                    </div>
                    <group name="group_1" colspan="4" col="2">
                        <group name="group_1_1" colspan="1" col="2">
                            <field
                                    name="project_id"
                                    domain="[('state','in',['draft','new','open'])]"
                                />
                            <field name="signee_id" />
                            <field
                                    name="company_id"
                                    groups="base.group_multi_company"
                                />
                        </group>
                        <group name="group_1_2" colspan="1" col="2">
                            <field name="date" />
                        </group>
                    </group>
                    <!-- Filter hanya task milik project yg bersangkutan yg bisa dipilih -->
                    <notebook colspan="4">
                        <page name="task" string="Task">
                            <field
                                    name="task_ids"
                                    widget="many2many"
                                    domain="[('project_id','=',project_id)]"
                                />
                        </page>
                        <page string="Reviews" name="tier_validation">
                            <group name="tier_validation_1" colspan="4" col="2">
                                <field
                                        name="definition_id"
                                        groups="account_general_audit.accountant_general_audit_index_a1101_multiple_approval_setting_group"
                                    />
                                <field
                                        name="reviewer_partner_ids"
                                        widget="many2many_tags"
                                    />
                            </group>
                            <group name="tier_validation_2" colspan="4" col="2">
                                <field name="review_ids" readonly="1" />
                            </group>
                        </page>
                        <page
                                name="policy"
                                string="Policies"
                                groups="project_assignment_letter.project_assignment_letter_workflow_policy_setting_group"
                            >
                            <group name="policy_1" colspan="4" col="2">
                                <field name="confirm_ok" />
                                <field name="valid_ok" />
                                <field name="restart_validation_ok" />
                                <field name="cancel_ok" />
                                <field name="restart_ok" />
                            </group>
                        </page>
                        <page name="log" string="Logs">
                            <group name="group_log" colspan="4" col="3">
                                <group name="group_log_1" colspan="4" col="3">
                                    <field name="confirm_date" string="Confirmation" />
                                    <field name="confirm_user_id" nolabel="1" />
                                    <field name="valid_date" string="Validation" />
                                    <field name="valid_user_id" nolabel="1" />
                                    <field name="cancel_date" string="Cancellation" />
                                    <field name="cancel_user_id" nolabel="1" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field
                            name="message_follower_ids"
                            widget="mail_followers"
                            groups="base.group_user"
                        />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="project_assignment_letter_action" model="ir.actions.act_window">
        <field name="name">Assignment Letters</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.assignment_letter</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'readonly_by_pass': True,
            'search_default_dom_draft':1,
            'search_default_dom_confirm':1,
            }
        </field>
    </record>

    <menuitem
            id="project_assignment_letter_menu"
            name="Assignment Letters"
            parent="project.menu_project_management"
            action="project_assignment_letter_action"
            sequence="10"
        />


</data>
</openerp>
