<odoo>
<record id="project_project_view_form" model="ir.ui.view">
     <field name="name">project.project form</field>
     <field name="model">project.project</field>
     <field name="inherit_id" ref="project.edit_project" />
     <field name="mode">extension</field>
     <field name="arch" type="xml">
          <data>
               <xpath expr="//notebook" position="inside">
                    <page name="team" string="Teams">
                         <group
                            name="team_1"
                            string="All Team Member(s)"
                            colspan="4"
                            col="2"
                        >
                              <field
                                name="team_ids"
                                nolabel="1"
                                widget="many2many_tags_avatar"
                            />
                         </group>
                         <group
                            name="team_2"
                            string="Active Team Member(s)"
                            colspan="4"
                            col="2"
                        >
                              <field
                                name="active_team_ids"
                                nolabel="1"
                                widget="many2many_tags_avatar"
                            />
                         </group>
                    </page>
                    <page name="assignment" string="Assignments">
                         <group
                            name="active_assignment"
                            colspan="4"
                            col="2"
                            string="Active"
                        />
                         <field name="active_assignment_ids" />
                         <group
                            name="all_assignment"
                            colspan="4"
                            col="2"
                            string="All"
                        />
                         <field name="all_assignment_ids" />
                    </page>
               </xpath>
          </data>
     </field>
</record>
</odoo>
