<openerp>
<data>
<record id="project_template_view_form" model="ir.ui.view">
    <field name="name">project.template form</field>
    <field name="model">project.template</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button
                            name="%(project_create_project_from_template_action)d"
                            string="Create Project"
                            type="action"
                        />
            </header>
            <sheet>
                <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        >
                    <button
                                name="%(project_task_template_project_action)d"
                                string="Task Templates"
                                type="action"
                                class="oe_inline oe_stat_button"
                                icon="fa-book"
                            />
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" style="width: 500px;">
                        <label for="name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                </div>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="active" />
                        <field name="project_parent_id" />
                    </group>
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="privacy_visibility" />
                    </group>
                </group>
                <notebook>
                    <page name="page_task_stage" string="Task Stages">
                        <field name="task_type_ids" colspan="4" nolabel="1" />
                    </page>
                    <page name="task_template" string="Task Templates">
                        <field
                                    name="task_template_ids"
                                    colspan="4"
                                    nolabel="1"
                                    context="{'default_project_template_id': id}"
                                >
                            <tree>
                                <field name="sequence" widget="handle" />
                                <field name="name" />
                                <field name="user_id" />
                                <field name="reviewer_id" />
                            </tree>
                            <form>
                                <header>

                                </header>
                                <sheet>
                                    <div
                                                class="oe_right oe_button_box"
                                                style="width: 300px;"
                                                name="buttons"
                                            >
                                    </div>
                                    <div class="oe_left" style="width: 500px;">
                                        <div class="oe_title" style="width: 500px;">
                                            <label for="name" />
                                            <h1>
                                                <field name="name" />
                                            </h1>
                                        </div>
                                    </div>
                                    <group name="group_1" colspan="4" col="2">
                                        <group name="group_1_1" colspan="1" col="2">
                                            <field name="active" />
                                            <field name="sequence" />
                                            <field
                                                        name="project_template_id"
                                                        invisible="1"
                                                    />
                                        </group>
                                        <group name="group_1_1" colspan="1" col="2">
                                            <field name="user_id" />
                                            <field name="reviewer_id" />
                                        </group>
                                    </group>
                                    <notebook>
                                        <page name="note" string="Note">
                                            <field
                                                        name="note"
                                                        colspan="4"
                                                        nolabel="1"
                                                    />
                                        </page>
                                    </notebook>
                                </sheet>
                            </form>
                        </field>
                    </page>
                    <page name="page_note" string="Note">
                        <field name="note" colspan="4" nolabel="1" />
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field
                            name="message_follower_ids"
                            widget="mail_followers"
                            groups="base.group_user"
                        />
                <field name="message_ids" widget="mail_thread" />
            </div>
        </form>
    </field>
</record>

<record id="project_template_view_tree" model="ir.ui.view">
    <field name="name">project.template tree</field>
    <field name="model">project.template</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name" />
        </tree>
    </field>
</record>

<record id="project_template_view_search" model="ir.ui.view">
    <field name="name">project.template search</field>
    <field name="model">project.template</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" />
        </search>
    </field>
</record>

<record id="project_template_action" model="ir.actions.act_window">
    <field name="name">Project Template</field>
    <field name="res_model">project.template</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="project_template_view_search" />
</record>

<menuitem
            id="project_template_menu"
            name="Project Template"
            parent="base.menu_definitions"
            action="project_template_action"
            sequence="1"
        />


</data>
</openerp>
