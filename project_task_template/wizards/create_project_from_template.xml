<openerp>
    <data>

        <record id="project_create_project_from_template_view_form" model="ir.ui.view">
            <field name="name">project.create_project_from_template form</field>
            <field name="model">project.create_project_from_template</field>
            <field name="arch" type="xml">
                <form>
                    <group colspan="2" col="2">
                        <field name="project_template_id" invisible="1" />
                        <field
                            name="name"
                            placeholder="Leave blank to use project template name"
                        />
                        <field
                            name="project_parent_id"
                            placeholder="Leave blank to use template setting"
                        />
                        <field name="partner_id" domain="[('parent_id','=',False)]" />
                    </group>
                    <footer>
                        <button
                            string="Generate"
                            name="button_generate"
                            type="object"
                            class="oe_highlight"
                        />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
           </field>
        </record>

        <record
            id="project_create_project_from_template_action"
            model="ir.actions.act_window"
        >
            <field name="name">Create Project From Template</field>
            <field name="res_model">project.create_project_from_template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field
                name="view_id"
                ref="project_create_project_from_template_view_form"
            />
            <field name="target">new</field>
        </record>

    </data>
</openerp>
