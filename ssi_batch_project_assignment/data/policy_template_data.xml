<!-- Restart Approval -->
<record id="policy_template_detail_restart_approval" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','project.batch_assignment'),('name','=','restart_approval_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','project.batch_assignment'),('value','in',['confirm','reject'])]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('project_batch_assignment_validator_group')])]"
            />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if not document.approval_template_id:
    result = True</field>
</record>

