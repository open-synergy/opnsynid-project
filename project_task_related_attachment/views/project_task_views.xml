<openerp>
    <data>
        <record id="project_task_form_views" model="ir.ui.view">
            <field name="name">project.task form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//notebook" position="inside">
                        <page
                            name="page_related_attachment"
                            string="Related Attachment"
                        >
                            <group name="grp_related_attachment_1" colspan="4" col="2">
                                <field
                                    name="allowed_related_attachment_template_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />
                                <field
                                    name="related_attachment_template_id"
                                    string="Template"
                                    domain="[('id','in',allowed_related_attachment_template_ids[0][2])]"
                                />
                            </group>
                            <field name="related_attachment_ids" nolabel="1" />
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
