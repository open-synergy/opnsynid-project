<odoo>

<record id="view_project_project_filter" model="ir.ui.view">
     <field name="name">project.project search</field>
     <field name="model">project.project</field>
     <field name="inherit_id" ref="project.view_project_project_filter" />
     <field name="mode">extension</field>
     <field name="arch" type="xml">
          <data>
               <xpath expr="//field[@name='name']" position="after">
                    <field name="state" />
               </xpath>
               <xpath expr="//filter[@name='Partner']" position="after">
                   <filter
                        name="grp_state"
                        string="State"
                        context="{'group_by': 'state'}"
                    />
               </xpath>
          </data>
     </field>
</record>

<record id="view_project" model="ir.ui.view">
    <field name="name">project.project.tree</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.view_project" />
    <field name="mode">extension</field>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='company_id']" position="after">
            <field name="state" widget="badge" decoration-info="state == 'draft'" />
        </xpath>
    </field>
</record>

<record id="edit_project" model="ir.ui.view">
    <field name="name">project.project.form</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.edit_project" />
    <field name="arch" type="xml">

        <xpath expr="//header" position="inside">
            <button
                    name="action_confirm"
                    class="oe_highlight"
                    confirm="Start data. Are you sure?"
                    type="object"
                    states="draft"
                    string="Start"
                />
            <button
                    name="action_pending"
                    confirm="Pending data. Are you sure?"
                    type="object"
                    states="open"
                    string="Pending"
                />
            <button
                    name="action_done"
                    class="oe_highlight"
                    confirm="Finish data. Are you sure?"
                    type="object"
                    states="open,pending"
                    string="Done"
                />
            <button
                    name="action_cancel"
                    confirm="Cancel data. Are you sure?"
                    type="object"
                    states="draft,open,pending,done"
                    string="Cancel"
                />
            <button
                    name="action_draft"
                    confirm="Restart data. Are you sure?"
                    type="object"
                    states="cancel"
                    string="Restart"
                />
            <field
                    name="state"
                    widget="statusbar"
                    statusbar_visible="draft,open,pending,done"
                />
        </xpath>

    </field>
</record>

<menuitem
        action="project.open_view_project_all_config"
        id="project.menu_projects"
        name="Projects"
        parent="project.menu_main_pm"
        groups="project_viewer_group"
        sequence="1"
    />

<menuitem
        action="project.open_view_project_all_config"
        id="project.menu_projects_config"
        name="Projects"
        parent="project.menu_project_config"
        sequence="10"
        groups="base.group_no_one"
    />
</odoo>
