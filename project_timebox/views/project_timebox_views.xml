<?xml version="1.0"?>
<openerp>
<data>
<record id="project_timebox_view_form" model="ir.ui.view">
    <field name="name">project.timebox form</field>
    <field name="model">project.timebox</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_open" type="object" string="Open" attrs="{'invisible':[('state','!=','new')]}" confirm="Open Timebox. Are you sure?"/>
                <button name="action_done" type="object" string="Done" attrs="{'invisible':[('state','!=','open')]}" confirm="Finish Timebox. Are you sure?"/>
                <button name="action_restart" type="object" string="Restart" class="oe_highlight" attrs="{'invisible':[('state','=','new')]}" confirm="Restart Timebox. Are you sure?"/>
                <field name="state" widget="statusbar" statusbar_visible="new,open,done"/>
            </header>
            <sheet>
                <div class="oe_right oe_button_box" style="width: 300px;" name="buttons">
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" style="width: 500px;">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </div>
                <group name="group_1" colspan="4" col="2">
                    <field name="code"/>
                    <field name="active"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                </group>
                <notebook>
                    <page name="note" string="Note">
                        <field name="note" colspan="4" nolabel="1"/>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record id="project_timebox_view_tree" model="ir.ui.view">
    <field name="name">project.timebox tree</field>
    <field name="model">project.timebox</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="code"/>
            <field name="date_start"/>
            <field name="date_stop"/>
            <field name="state"/>
        </tree>
    </field>
</record>

<record id="project_timebox_view_search" model="ir.ui.view">
    <field name="name">project.timebox search</field>
    <field name="model">project.timebox</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="code"/>
        </search>
    </field>
</record>

<record id="project_timebox_action" model="ir.actions.act_window">
    <field name="name">Timeboxes</field>
    <field name="res_model">project.timebox</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="project_timebox_view_search"/>
</record>

<menuitem
    id="project_timebox_menu"
    name="Timeboxes"
    parent="base.menu_definitions"
    action="project_timebox_action"
    sequence="1"/>


</data>
</openerp>
