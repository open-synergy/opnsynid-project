<openerp>
<data>

<record id="project_task_view_form" model="ir.ui.view">
    <field name="name">project.task form</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='categ_ids']" position="after">
            <field name="on_running_timebox"/>
            <field name="timebox_ids" widget="many2many_tags"/>
            <separator string="Initial Timebox" colspan="4"/>
            <field name="timebox_initial_id" string="Timebox"/>
            <field name="timebox_initial_date_start" string="Timebox Date Start"/>
            <field name="timebox_initial_date_stop" string="Timebox Date Stop"/>
            <separator string="Latest Timebox" colspan="4"/>
            <field name="timebox_latest_id" string="Timebox"/>
            <field name="timebox_date_start" string="Timebox Date Start"/>
            <field name="timebox_date_stop" string="Timebox Date Stop"/>
        </xpath>
    </field>
</record>

<record id="project_task_view_search" model="ir.ui.view">
    <field name="name">project.task search</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_search_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='stage_id']" position="after">
            <field name="timebox_latest_id"/>
        </xpath>
        <xpath expr="//filter[@name='project']" position="before">
            <filter name="filter_running_timebox_true" string="Running Timebox True" domain="[('on_running_timebox','!=',0)]"/>
            <filter name="filter_running_timebox_false" string="Running Timebox False" domain="[('on_running_timebox','=',0)]"/>
            <filter string="Timebox" name="filter_timebox_latest_id" context="{'group_by':'timebox_latest_id'}"/>
            <filter name="grp_timebox_date_stop_day" string="Timebox Date Stop by Day" context="{'group_by':'timebox_date_stop:day'}"/>
            <filter name="grp_timebox_date_stop_week" string="Timebox Date Stop by Week" context="{'group_by':'timebox_date_stop:week'}"/>
            <filter name="grp_timebox_date_stop_month" string="Timebox Date Stop by Month" context="{'group_by':'timebox_date_stop:month'}"/>
            <filter name="grp_timebox_date_stop_year" string="Timebox Date Stop by Year" context="{'group_by':'timebox_date_stop:year'}"/>
        </xpath>
    </field>
</record>

</data>
</openerp>
