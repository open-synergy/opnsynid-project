<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <!--
        Project Timebox
        -->

        <record id="timebox_1" model="project.timebox">
            <field eval="'TB 01/'+time.strftime('%Y')" name="code" />
            <field eval="'X TB 01/'+time.strftime('%Y')" name="name" />
            <field eval="time.strftime('%Y')+'-01-01'" name="date_start" />
            <field eval="time.strftime('%Y')+'-01-31'" name="date_stop" />
        </record>
        <record id="timebox_2" model="project.timebox">
            <field eval="'TB 02/'+time.strftime('%Y')" name="code" />
            <field eval="'X TB 02/'+time.strftime('%Y')" name="name" />
            <field eval="time.strftime('%Y')+'-02-01'" name="date_start" />
            <!-- for the last day of February, we have to compute the day before March 1st -->
            <field
                eval="(DateTime.today().replace(month=3, day=1) - timedelta(days=1)).strftime('%Y-%m-%d')"
                name="date_stop"
            />
        </record>
