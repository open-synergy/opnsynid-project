<openerp>
    <data>
        <record id="project_template_view_form" model="ir.ui.view">
            <field name="name">project.template.policy.form</field>
            <field name="model">project.template</field>
            <field
                name="inherit_id"
                ref="project_task_template.project_template_view_form"
            />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="policy" string="Workflow Policy">
                        <group
                            name="group_workflow_policy"
                            colspan="4"
                            col="2"
                            string="Project"
                        >
                            <field
                                name="project_reopen_grp_ids"
                                widget="many2many_tags"
                            />
                            <field
                                name="project_close_grp_ids"
                                widget="many2many_tags"
                            />
                            <field
                                name="project_pending_grp_ids"
                                widget="many2many_tags"
                            />
                            <field
                                name="project_set_template_grp_ids"
                                widget="many2many_tags"
                            />
                            <field name="project_new_grp_ids" widget="many2many_tags" />
                            <field
                                name="project_reset_grp_ids"
                                widget="many2many_tags"
                            />
                            <field
                                name="project_cancel_grp_ids"
                                widget="many2many_tags"
                            />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
